<includes>
	<include name="global_Background">
		<control type="image">
			<include>screen_Dimensions</include>
			<texture background="true">$VAR[global_Background.Fallback]</texture>
			<visible>Skin.HasSetting(fanart.global) + IsEmpty(ListItem.Property(Fanart_Image)) + ![Player.HasVideo + Skin.HasSetting(backgroundvideo.global)] + !ControlGroup(6000).HasFocus</visible>
			<include>transition_Fanart</include>
			<include>menu_BackgroundHide</include>
		</control>
		<control type="image">
			<include>screen_Dimensions</include>
			<texture background="true">$INFO[ListItem.Property(Fanart_Image)]</texture>
			<visible>[!Skin.HasSetting(fanart.extra) | IsEmpty(ListItem.Path,,extrafanart) | !IsEmpty(ListItem.Property(Fanart_Image)) | SubString(Container.FolderPath,plugin://)] + Skin.HasSetting(fanart.global) + !IsEmpty(ListItem.Property(Fanart_Image)) + ![Player.HasVideo + Skin.HasSetting(backgroundvideo.global)] + !ControlGroup(6000).HasFocus</visible>
			<include>transition_Fanart</include>
			<fadetime>fadetime_Fanart</fadetime>
			<include>menu_BackgroundHide</include>
			<include>AnimateBackgrounds</include>
		</control>
		<control type="multiimage">
			<include>screen_Dimensions</include>
			<imagepath background="true">$INFO[ListItem.Path,,extrafanart]</imagepath>
			<aspectratio align="center">scale</aspectratio>
			<timeperimage>1500</timeperimage>
			<fadetime>900</fadetime>
			<randomize>true</randomize>
			<loop>yes</loop>
			<include>AnimateBackgrounds</include>
			<visible>[!Control.IsVisible(53) + !Window.isActive(2003) + !SubString(Container.FolderPath,plugin://)] + Skin.HasSetting(fanart.extra) + !IsEmpty(ListItem.Title) + !IsEmpty(ListItem.Path,,extrafanart)</visible>
		</control>
		<!--playing video background-->
		<control type="group">
			<visible>Player.HasVideo + Skin.HasSetting(backgroundvideo.global)</visible>
			<control type="image">
				<aspectratio>stretch</aspectratio>
				<include>screen_Dimensions</include>
				<texture>black.png</texture>
				<visible></visible>
			</control>
			<control type="videowindow">
				<include>screen_Dimensions</include>
				<visible>![Window.IsActive(pictures) + Control.IsVisible(531)] + !Window.IsActive(weather)</visible>
			</control>
		</control>
		<control type="group">
			<!--global background default opacity-->
			<visible>!Skin.HasSetting(background.opacitymediaonly) | ![Skin.HasSetting(background.opacitylight) | Skin.HasSetting(background.opacitymedium) | Skin.HasSetting(background.opacityheavy)]</visible>
			<control type="image">
				<aspectratio>stretch</aspectratio>
				<include>screen_Dimensions</include>
				<texture background="true">backgrounds/background.png</texture>
				<visible>![Skin.HasSetting(background.opacitylight) | Skin.HasSetting(background.opacitymedium) | Skin.HasSetting(background.opacityheavy)] + ![Window.IsActive(2) + Control.IsVisible(531)] + !Window.IsActive(2006)] + !Window.IsActive(weather)</visible>
				<include>transition_BG</include>
			</control>
			<!--vignette default opacity-->
			<control type="image">
				<include>screen_Dimensions</include>
				<texture background="true">overlays/vignette.png</texture>
				<visible>![Skin.HasSetting(background.opacitylight) | Skin.HasSetting(background.opacitymedium) | Skin.HasSetting(background.opacityheavy)] + ![Window.IsActive(2) + Control.IsVisible(531)] + !Window.IsActive(2006)] + Skin.HasSetting(fanart.global.alt)</visible>
				<include>transition_BG</include>
			</control>
			<!--light opacity-->
			<!--global background-->
			<control type="image">
				<aspectratio>stretch</aspectratio>
				<include>screen_Dimensions</include>
				<texture background="true">backgrounds/background.png</texture>
				<colordiffuse>99FFFFFF</colordiffuse>
				<visible>Skin.HasSetting(background.opacitylight) + ![Window.IsActive(2) + Control.IsVisible(531)] + !Window.IsActive(2006)] + !Window.IsActive(weather)</visible>
				<include>transition_BG</include>
			</control>
			<!--vignette-->
			<control type="image">
				<include>screen_Dimensions</include>
				<texture background="true">overlays/vignette.png</texture>
				<colordiffuse>99FFFFFF</colordiffuse>
				<visible>Skin.HasSetting(background.opacitylight) + ![Window.IsActive(2) + Control.IsVisible(531)] + !Window.IsActive(2006)] + Skin.HasSetting(fanart.global.alt)</visible>
				<include>transition_BG</include>
			</control>
			<!--medium opacity-->
			<!--global background-->
			<control type="image">
				<aspectratio>stretch</aspectratio>
				<include>screen_Dimensions</include>
				<texture background="true">backgrounds/background.png</texture>
				<colordiffuse>77FFFFFF</colordiffuse>
				<visible>Skin.HasSetting(background.opacitymedium) + ![Window.IsActive(2) + Control.IsVisible(531)] + !Window.IsActive(2006)] + !Window.IsActive(weather)</visible>
